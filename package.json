{
	"name": "lms-test-runner",
	"displayName": "lms-test-runner",
	"description": "Allows to operate with LMS remotely.",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:lmsTestRunner",
		"onCommand:lmsTestRunner.runForCurrentFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lmsTestRunner.runForCurrentFile",
				"title": "LMSTestRunner: Run for current file"
			}
		],
		"configuration": [
			{
				"title": "LMS Host",
				"properties": {
					"lmsTestRunner.endpoint": {
						"type": "string",
						"default": "http://lms.test.runner.com",
						"description": "endpoint of host test server runner"
					}
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "lmsTestRunner.runForCurrentFile",
					"when": "editorLangId == typescript"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "lms-test-runner-explorer",
					"title": "LMS Explorer",
					"icon": "media/dep.png"
				}
			]
		},
		"views": {
			"lms-test-runner-explorer": [
				{
					"id": "lmsTestRunner",
					"name": "LMS Test Runner"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/got": "^9.6.9",
		"axios": "^0.21.1"
	}
}
